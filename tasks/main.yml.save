---
  - name: DockerGC | Check if is present
    command: "test -x {{docker_gc_bin}}"
    ignore_errors: yes
    register: gc_present
    tags: dockergc

  - name: DockerGC | Ensure working dir present
    file: path="{{docker_gc_working_dir}}" state="directory"
    when: gc_present|failed
    become: yes
    tags: dockergc


  - name: DockerGC | Ensure binary is present 
    file: path="{{docker_gc_working_dir}}" state="directory"
    when: gc_present|failed
    become: yes
    tags: dockergc

